<h1>Listing apex_classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @apex_classes.each do |apex_class| %>
      <tr>
        <td><%= apex_class.Name %><td>
        <td><%= link_to 'Edit', edit_apex_class_path(apex_class) %></td>
        <td><%= link_to 'Destroy', apex_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

